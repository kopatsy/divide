<html>
    <script src="./jquery.min.js"></script>
    <script src="./highcharts.js"></script>
    <script src="./multicolor_series.js"></script>
    <body>
    <div id="container" style="width:100%; height:200px;"></div>
    {{#pois}}
    {{name}} {{togo}} miles<br>
    {{/pois}}
    <script>
        $(function () {
        var chart = new Highcharts.Chart({
            chart: {
                renderTo: 'container',
                type: 'coloredarea',
                zoomType: 'xy',
                borderWidth: 5,
                borderColor: '#e8eaeb',
                borderRadius: 0,
                backgroundColor: '#f7f7f7'
            },
            legend: {
                enabled: false
            },
            title: {
                text: ''
            },
            yAxis: {
                title: {
                    text: 'Elevation (feet)'
                }
            },
            xAxis: {
                title: {
                    text: 'Distance (miles)'
                },
                plotLines: [
                    {{#pois}}
                    {
                        value: {{distance}},
                        width: 2,
                        color: 'black',
                        /*label: {
                            text: '{{name}}',
                            fontSize: '0.3em',
                            rotation: 0
                        }*/
                    },
                    {{/pois}}
                ]
            },
            series: [{
                type: 'coloredarea',
                name: 'route',
                data: [
                    {{#data}}
                    {
                        x: {{distance}},
                        y: {{elevation}},
                        segmentColor: 'rgba({{color.red}}, {{color.green}}, {{color.blue}}, 0.5)'
                    },
                    {{/data}}
                ]
            }]
        });
        });
        </script>
    </body>
</html>